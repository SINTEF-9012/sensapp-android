<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_for_sensor_list">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="Edit title"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/graph_sensor_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:scrollHorizontally="true"
        android:hint="Chart title"
        android:inputType="textShortMessage"
        android:gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="Edit highest value visible"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/graph_sensor_highest"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="0dip"
            android:scrollHorizontally="true"
            android:hint="Highest value           "
            android:inputType="numberDecimal|numberSigned"
            android:gravity="fill_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="left|center_vertical"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:id="@+id/checkBoxHighest" android:layout_gravity="center_vertical|right" android:checked="false"
                android:layout_marginLeft="6dp"/>
    </LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="Edit lowest value visible"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/graph_sensor_lowest"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="0dip"
            android:scrollHorizontally="true"
            android:hint="Lowest value            "
            android:inputType="numberDecimal|numberSigned"
            android:gravity="fill_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:id="@+id/checkBoxLowest" android:layout_gravity="center_vertical|right" android:checked="false"
                android:layout_marginLeft="6dp"/>
    </LinearLayout>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="Edit color"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/graph_sensor_color"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="Edit style"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
            android:id="@+id/graph_sensor_style"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

</LinearLayout>
